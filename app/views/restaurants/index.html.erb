<%= render "shared/navbar" %>

<div class="container">
  <div class="row py-3">
    <div class="col-12">
      <h2 class="text-center">Restaurantes asociados</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <p style="color: green"><%= notice %></p>
    </div>
  </div>
  <div class="row gy-3 py-3">
    <% @restaurants.each do |restaurant| %>
      <div class="col-md-6">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= restaurant.name %></h5>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Actualizado en: </strong><%= restaurant.updated_at.strftime('%d/%m/%Y %H:%M:%S') %></li>
            <li class="list-group-item"><strong>Estado: </strong><%= restaurant.status_rest %></li>
          </ul>
          <div class="card-body">
            <div class="row">
              <div class="col-12">
                <a href="<%= restaurant_path(restaurant.id) %>" class="btn btn-primary w-100"><i class="fa-solid fa-pen-to-square"></i> Detalles</a>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="row py-5">
    <div class="col-12">
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-success w-100" data-bs-toggle="modal" data-bs-target="#restaurantModal">
        <i class="fa-solid fa-file"></i> Nuevo restaurante
      </button>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal fade" id="restaurantModal" tabindex="-1" aria-labelledby="restaurantModallLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="restaurantModallLabel">AÃ±adir un nuevo restaurante</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with(model: @restaurant) do |form| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= form.label :name, "Restaurante asociado", class: "form-label" %>
            <%= form.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "shared/footer" %>